<style>
    .info-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 2rem 1.5rem;
    }

    .info-card {
        background: white;
        padding: 3rem;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-lg);
        width: 100%;
        max-width: 700px;
        border: 1px solid var(--border);
    }

    .info-header {
        margin-bottom: 2.5rem;
        position: relative;
    }

    .back-link {
        display: inline-block;
        color: var(--primary);
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 1rem;
        transition: transform 0.2s ease;
    }

    .back-link:hover {
        transform: translateX(-4px);
    }

    .info-header h1 {
        font-size: 2.25rem;
        margin-bottom: 0.5rem;
        color: var(--text-main);
        letter-spacing: -0.025em;
    }

    .project-tagline {
        color: var(--text-muted);
        font-size: 1.125rem;
    }

    .info-section {
        margin-bottom: 2rem;
    }

    .info-section h2 {
        font-size: 1.25rem;
        margin-bottom: 1rem;
        color: var(--text-main);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .info-section p {
        color: #475569;
        line-height: 1.7;
        font-size: 1rem;
    }

    .tech-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.25rem;
        margin-top: 1rem;
    }

    .tech-item {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        padding: 1rem;
        background: #f8fafc;
        border-radius: var(--radius);
        border: 1px solid var(--border);
        transition: border-color 0.2s ease;
    }

    .tech-item:hover {
        border-color: var(--primary);
    }

    .tech-icon {
        font-size: 1.5rem;
    }

    .tech-info {
        display: flex;
        flex-direction: column;
    }

    .tech-info strong {
        color: var(--text-main);
        font-size: 0.9375rem;
    }

    .tech-info span {
        font-size: 0.8125rem;
        color: var(--text-muted);
    }

    .info-footer {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border);
    }

    .links-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .external-link {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        padding: 1rem;
        border-radius: var(--radius);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s ease;
    }

    .github {
        background: #333;
        color: white;
    }

    .github:hover {
        background: #000;
        transform: translateY(-2px);
    }

    .portfolio {
        background: var(--primary);
        color: white;
    }

    .portfolio:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
    }

    @media (max-width: 640px) {
        .info-card {
            padding: 2rem 1.5rem;
        }

        .info-header h1 {
            font-size: 1.75rem;
        }

        .links-grid {
            grid-template-columns: 1fr;
        }

        .tech-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
